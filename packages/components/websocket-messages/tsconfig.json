{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "declarationMap": true,
    "incremental": true,
    "composite": true,
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "references": [
    { "path": "../cqrs/tsconfig.json" },
    { "path": "../../common/domain-cqrs-components/tsconfig.json" }
  ],
  "include": ["src"],
  "exclude": [
    "dist",
    "**/*.test.ts",
    "**/__tests__"
  ]
}